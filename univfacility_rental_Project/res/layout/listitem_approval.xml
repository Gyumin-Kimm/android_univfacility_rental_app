<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:example="http://schemas.android.com/apk/lib/com.example.administrator"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:gravity="center"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/approval_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="대여자"
        android:textColor="#475724"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/approval_fac_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시설코드"
        android:textColor="#475724"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/approval_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="날짜"
        android:textColor="#475724"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/approval_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="상태"
        android:textColor="#475724"
        android:textSize="13sp"
        android:textStyle="bold" />
    
    <TextView
        android:id="@+id/approval_booknum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="북넘"
        android:textColor="#475724"
        android:textSize="13sp"
        android:textStyle="bold" />
    
</LinearLayout>
