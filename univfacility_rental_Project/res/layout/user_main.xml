<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#fffff2"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <Button
            android:id="@+id/board_btn"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/board"
            android:onClick="mOnClick_notice" />

        <Button
            android:id="@+id/book_btn"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/book"
            android:onClick="mOnClick_app" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <Button
            android:id="@+id/mypage_btn"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/mypage_btn"
            android:onClick="mOnClick_inquiry" />

        <Button
            android:id="@+id/setting_btn"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/setting"
            android:onClick="mOnClick_set" />

    </LinearLayout>
    
   

</LinearLayout>