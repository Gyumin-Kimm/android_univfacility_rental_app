<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffff2"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="6dp" >

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:gravity="center" >

         <TextView
            android:id="@+id/textView1"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:gravity="end"
            android:text="아이디"
            android:textColor="#475724"
            android:textStyle="bold" />

         <EditText
             android:id="@+id/MEMBER_ID"
             android:layout_width="170dp"
             android:layout_height="wrap_content"
             android:background="@drawable/shape1"
             android:ems="10" 
             android:inputType="textVisiblePassword"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:gravity="end"
            android:text="비밀번호"
            android:textColor="#475724"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/MEMBER_PW"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape1"
            android:ems="10"
            android:inputType="textPassword" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:gravity="end"
            android:text="이름"
            android:textColor="#475724"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/MEMBER_NAME"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape1"
            android:ems="10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/textView8"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:gravity="end"
            android:text="학번"
            android:textColor="#475724"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/MEMBER_STUNUM"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape1"
            android:ems="10" 
            android:inputType="number"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:gravity="end"
            android:text="이메일"
            android:textColor="#475724"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/MEMBER_EMAIL"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape1"
            android:ems="10"
            android:inputType="textEmailAddress" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="6dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:gravity="end"
            android:text="전화번호"
            android:textColor="#475724"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/MEMBER_PHONE"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape1"
            android:ems="10"
            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center" >

        <Button
            android:id="@+id/join_btn"
            style="@style/btnStyledark_khaki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:onClick="mOnClick_send"
            android:text="완료"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/reset_btn"
            style="@style/btnStyledark_khaki"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="재작성"
            android:textColor="#ffffff" />

    </LinearLayout>  

</LinearLayout>