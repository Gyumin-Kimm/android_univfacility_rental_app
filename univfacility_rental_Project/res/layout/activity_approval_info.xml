<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffff2"
    android:orientation="vertical"
    android:padding="4dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.ApprovalInfoActivity" >
   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="3dp"
            android:background="@drawable/shape4"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="날짜"
                android:textColor="#69523d"
                android:textSize="14sp"
                android:textStyle="bold" />


        </LinearLayout>
       
       <TextView
           android:id="@+id/approval_info_date"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:background="@drawable/shape2"
           android:gravity="center"
           android:text="날짜값" />
    
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >
       
           <LinearLayout
               android:layout_width="55dp"
               android:layout_height="match_parent"
               android:layout_gravity="center"
               android:layout_marginRight="3dp"
               android:background="@drawable/shape4"
               android:gravity="center" >
       
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="신청자"
            android:textColor="#69523d"
            android:textSize="14sp"
            android:textStyle="bold" />
       
       </LinearLayout>
       
            <TextView
                android:id="@+id/approval_info_memberid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape2"
                android:gravity="center"
                android:text="신청자값" />
            
    </LinearLayout>
       
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="2dp"
	    android:layout_weight="1"
	    android:gravity="center"
	    android:orientation="horizontal" >
       
           <LinearLayout
               android:layout_width="55dp"
               android:layout_height="match_parent"
               android:layout_gravity="center"
               android:layout_marginRight="3dp"
               android:background="@drawable/shape4"
               android:gravity="center" >
       
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:gravity="center"
           android:text="신청자2"
           android:textColor="#69523d"
           android:textSize="14sp"
           android:textStyle="bold" />

        </LinearLayout>
       <TextView
           android:id="@+id/approval_info_members"
           android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape2"
            android:gravity="center"
           android:text="신청자2값" />
       
      
       
    </LinearLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="2dp"
	    android:layout_weight="1"
	    android:gravity="center"
	    android:orientation="horizontal" >
	       
           <LinearLayout
               android:layout_width="55dp"
               android:layout_height="match_parent"
               android:layout_gravity="center"
               android:layout_marginRight="3dp"
               android:background="@drawable/shape4"
               android:gravity="center" >
       
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:text="사유"
                   android:textColor="#69523d"
                   android:textSize="14sp"
                   android:textStyle="bold" />

        </LinearLayout>
        
       <TextView
           android:id="@+id/approval_info_reason"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape2"
            android:gravity="center"
           android:text="사유값" />
       
    </LinearLayout>
    
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="2dp"
       android:layout_weight="1"
       android:gravity="center"
       android:orientation="horizontal" >
       
           <LinearLayout
               android:layout_width="55dp"
               android:layout_height="match_parent"
               android:layout_gravity="center"
               android:layout_marginRight="3dp"
               android:background="@drawable/shape4"
               android:gravity="center" >
       
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:text="신청자 Phone"
                   android:textColor="#69523d"
                   android:textSize="14sp"
                   android:textStyle="bold" />

        </LinearLayout>
        
       <TextView
           android:id="@+id/approval_info_phone"
          android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape2"
            android:gravity="center"
           android:text="신청자 phone값" />
       
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >
       
           <LinearLayout
               android:layout_width="55dp"
               android:layout_height="match_parent"
               android:layout_gravity="center"
               android:layout_marginRight="3dp"
               android:background="@drawable/shape4"
               android:gravity="center" >
       
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:text="시설코드"
                   android:textColor="#69523d"
                   android:textSize="14sp"
                   android:textStyle="bold" />
               
        </LinearLayout>
        
         <TextView
               android:id="@+id/approval_info_code"
               android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape2"
            android:gravity="center"
              android:text="시설코드값" />
    
    
    </LinearLayout>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >
       
           <LinearLayout
               android:layout_width="55dp"
               android:layout_height="match_parent"
               android:layout_gravity="center"
               android:layout_marginRight="3dp"
               android:background="@drawable/shape4"
               android:gravity="center" >
       
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:text="상태"
                   android:textColor="#69523d"
                   android:textSize="14sp"
                   android:textStyle="bold" />
               
        </LinearLayout>
        
        
         <LinearLayout
             android:orientation="horizontal"
               android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape2"
            android:gravity="center" >
            
              <Button
                  android:id="@+id/approval_info_btn"
                  style="@style/btnStylelight_brown"
                  android:layout_width="130dp"
                  android:layout_height="50dp"
                  android:gravity="center"
                  android:text="상태변경"
                  android:textColor="#ffffff"
                  android:textSize="15sp" />
             
      </LinearLayout>

	</LinearLayout>
	
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal" >
       
           <LinearLayout
               android:layout_width="55dp"
               android:layout_height="match_parent"
               android:layout_gravity="center"
               android:layout_marginRight="3dp"
               android:background="@drawable/shape4"
               android:gravity="center" >
       
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:gravity="center"
                   android:text="장비"
                   android:textColor="#69523d"
                   android:textSize="14sp"
                   android:textStyle="bold" />
               
        </LinearLayout>
        
           <LinearLayout
             android:orientation="horizontal"
               android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape2"
            android:gravity="center" >
        
		         <Button
		               android:id="@+id/approval_info_equip"
		              style="@style/btnStylelight_brown"
		                  android:layout_width="130dp"
		                  android:layout_height="50dp"
		                  android:gravity="center"
		                  android:text="사용 가능 장비"
		                  android:textColor="#ffffff"
		                  android:textSize="15sp" />
		         
	         </LinearLayout>
		    
		    
    </LinearLayout>

    
</LinearLayout>